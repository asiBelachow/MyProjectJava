	private boolean getCommandByInput(String commandLine) {
		boolean commandOk = false;
		String command = null;

		// matching all regular expressions with the given user command
		Iterator<String> iter = commands.keySet().iterator();
		while (iter.hasNext() && !commandOk) {
			command = iter.next();
			commandOk = commandLine.matches(command);
		}
			
	return ok;
	}
	

