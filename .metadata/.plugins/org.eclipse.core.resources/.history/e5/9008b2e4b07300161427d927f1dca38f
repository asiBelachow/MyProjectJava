package controller;


import view.View;

import java.io.IOException;

import model.Model;

/**
 * <h1>The Interface Controller</h1><p>
 * Controller interface define the functionality that needed in order <br>
 * to transfer orders(commands between the view and the model <br>
 * @author Asi Belachow
 * @version 1.0
 * @since 2016-30-08
 */
public interface Controller {
	
	
	
	
	/**
	 * <h1>Set model</h1><p>
	 * <i><ul>void setModel(Model m)<i><p>
	 * @param m - the  model
	 */
	public void setModel(Model m);
	
	public void setView(View v);
	
	/*HashMap<String,Command> setCommands();
	
	HashMap<String,Command> getCommands();*/
	
	public void forwardCommand(String command,String[] param) throws IOException;

	public void setSolution(String solution);
		

	
}
