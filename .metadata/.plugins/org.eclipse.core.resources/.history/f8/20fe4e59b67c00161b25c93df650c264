package view;

public class MessageBox {
	
	private MessageBox msgBox;
	
	private void showMessage(String title, String msg) {
		display.syncExec(new Runnable() {

			@Override
			public void run() {

				if (msgBox != null && !closed) {
					msgBox.setText(title);
					msgBox.setMessage(msg);
					msgBox.open();
				}
			}
		});
	}

}
